<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0"
          prefWidth="300.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="sample.CalculadoraController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <VBox prefHeight="300.0" prefWidth="300.0">
            <children>
                <StackPane prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="result">
                            <font>
                                <Font name="System Bold" size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </StackPane>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#procesarNumeros" prefWidth="50.0" text="7"/>
                        <Button mnemonicParsing="false" onAction="#procesarNumeros" prefWidth="50.0" text="8"/>
                        <Button mnemonicParsing="false" onAction="#procesarNumeros" prefWidth="50.0" text="9"/>
                        <Button mnemonicParsing="false" onAction="#procesarOperadores" prefWidth="50.0" text="/"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#procesarNumeros" prefWidth="50.0" text="4"/>
                        <Button mnemonicParsing="false" onAction="#procesarNumeros" prefWidth="50.0" text="5"/>
                        <Button mnemonicParsing="false" onAction="#procesarNumeros" prefWidth="50.0" text="6"/>
                        <Button mnemonicParsing="false" onAction="#procesarOperadores" prefWidth="50.0" text="*"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#procesarNumeros" prefWidth="50.0" text="1"/>
                        <Button mnemonicParsing="false" onAction="#procesarNumeros" prefWidth="50.0" text="2"/>
                        <Button mnemonicParsing="false" onAction="#procesarNumeros" prefWidth="50.0" text="3"/>
                        <Button mnemonicParsing="false" onAction="#procesarOperadores" prefWidth="50.0" text="-"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#procesarNumeros" prefWidth="120.0" text="0"/>
                        <Button mnemonicParsing="false" onAction="#procesarOperadores" prefWidth="50.0" text="="/>
                        <Button mnemonicParsing="false" onAction="#procesarOperadores" prefWidth="50.0" text="+"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </children>
</GridPane>
